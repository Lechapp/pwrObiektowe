<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_marginEnd="1dp"
                                             android:layout_marginStart="1dp"
                                             android:background="@drawable/roundcorner"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content" android:id="@+id/daycontainer">

    <ImageView
            android:layout_width="67dp"
            android:layout_height="50dp" app:srcCompat="@drawable/cloud_sun_w"
            android:id="@+id/forecastimg"
            android:contentDescription="@string/weathericon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintTop_toBottomOf="@+id/forecastday"/>
    <TextView
            android:text="@string/date"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forecastday"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="12sp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="@string/tempout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forecasttemp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/forecastimg"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp" android:textSize="13sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>